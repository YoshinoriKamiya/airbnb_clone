<br>
<div class="container">
    <div class="text-center">
           <h2>Log in</h2><br>
        <div class="row">
            <div class="col-4 offset-4">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => "Email",class:"form-control" %>
                </div>
                <br>
                <div class="field mb-2">
                    <%= f.password_field :password, autocomplete: "current-password" ,:placeholder => "Password",class:"form-control"%>
                </div>

                <% if devise_mapping.rememberable? %>
                    <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :remember_me %>
                    </div>
                <% end %>
                
                <div class="field mb-2">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                <% end %>
                </div>

                <div class="actions">
                    <%= f.submit "Log in" ,class: "btn btn-block btn-danger"%>
                </div>
                <br>
                <div class="actions">
                    <%= f.submit "Sign in with Facebook" ,class: "btn btn-block btn-primary"%>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
