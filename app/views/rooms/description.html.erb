<%= render 'rooms/listing.side' %>
    <div class="col-9">
        <div class="card">
            <div class="card-header theme-color">Description</div>
                <div class="card-body">
                <%= form_for(@room) do |f| %>
                    <div class="form-group">
                        <label>Listing name</label>
                        <%= f.text_field :room_name , autofocus: true, autocomplete: "listing_name",:placeholder =>"What is your listing name?" ,class:"form-control",required: true%>
                    </div>
                    <div class="form-group">
                        <label>Summary</label>
                            <%= f.text_field :description , autofocus: true, autocomplete: "summary",:placeholder =>"Summary of your house" ,class:"form-control",required: true %>
                        </div>   
                        <div class="form-group mt-2">
                            <%= f.submit "Save", class:"btn btn-dark" %>
                        </div>
                <% end %>
            </div>
        </div>
    </div>
</div>