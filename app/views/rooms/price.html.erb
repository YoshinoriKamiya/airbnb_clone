<%= render 'rooms/listing.side' %>
    <div class="col-9">
        <div class="card">                
            <div class="card-header">
                <h5>Price</h5>
            </div>
            <div class="card-body">
                <%= form_for(@room) do |f| %>
                <div class="form-group">
                    <label for="room_price">Price</label>
                        <div class="form-group">
                                <%= f.number_field :price , autofocus: true, autocomplete: "price",:placeholder =>"Price" ,class:"form-control",required: true %>
                        </div>
                </div>
                <div class="form-group mt-2">
                    <%= f.submit "Save", class:"btn btn-dark" %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>